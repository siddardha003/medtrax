# Environment Variables for MedTrax Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/medtrax

# JWT Configuration
JWT_SECRET=medtrax_super_secret_jwt_key_2025_development_change_in_production
JWT_EXPIRE=7d

# Email Configuration (NodeMailer) - Update with your email credentials
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@medtrax.com

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
